{
	"name": "cyberui",
	"version": "0.1.0-alpha",
	"description": "A react-based component package inspired by the Cyberpunk 2077 universe",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"prepare": "husky install",
		"format": "prettier --config ./.prettierrc \"src/**/*.{ts,tsx,scss}\" --write",
		"assets-fonts": "mkdir ./lib/dist/fonts && cp -vruf ./src/fonts/*.woff2 ./lib/dist/fonts && cp -vruf ./src/fonts/*.woff ./lib/dist/fonts && cp -vruf ./src/fonts/*.ttf ./lib/dist/fonts",
		"assets-styles": "cp -vruf ./src/_* ./lib/",
		"assets": "rm -rf ./lib/dist/ && mkdir -p ./lib/dist && npm run assets-fonts && npm run assets-styles",
		"build": "npm run compile && npm run assets && npm run sass",
		"build-storybook": "build-storybook -o ./.story/build",
		"compile": "tsc",
		"clean": "rm -rf lib/",
		"lint": "eslint --ext js,jsx,ts,tsx src --fix",
		"sass": "sass ./src/cyberui.scss ./lib/dist/cyberui.min.css --style=compressed",
		"sass-dev": "sass ./src/cyberui.scss ./lib/dist/cyberui.css",
		"story": "start-storybook -p 8484",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evjero/cyberui.git"
	},
	"keywords": [
		"cyberpunk",
		"ui",
		"react",
		"components"
	],
	"author": "evjero",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/evjero/cyberui/issues"
	},
	"homepage": "https://github.com/evjero/cyberui#readme",
	"devDependencies": {
		"@babel/core": "7.19.1",
		"@babel/plugin-transform-modules-commonjs": "7.18.6",
		"@babel/plugin-transform-typescript": "7.11.0",
		"@babel/preset-env": "7.19.1",
		"@babel/preset-react": "7.18.6",
		"@babel/preset-typescript": "7.18.6",
		"@storybook/addon-controls": "6.5.13",
		"@storybook/addon-essentials": "6.5.6",
		"@storybook/addons": "6.5.6",
		"@storybook/builder-webpack5": "6.5.6",
		"@storybook/manager-webpack5": "6.5.6",
		"@storybook/react": "6.5.6",
		"@storybook/theming": "6.5.6",
		"@types/jest": "29.0.3",
		"@types/jsdom": "^16.2.15",
		"@types/node": "^16.0.0",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "5.36.1",
		"@typescript-eslint/parser": "5.36.1",
		"eslint": "8.23.0",
		"eslint-plugin-jest-dom": "4.0.2",
		"eslint-plugin-react": "7.31.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-testing-library": "5.6.4",
		"husky": "^8.0.1",
		"pretty-quick": "3.1.3",
		"react": "^18.0.0",
		"react-docgen-typescript-loader": "3.7.2",
		"react-dom": "^18.0.0",
		"sass": "1.53.0",
		"storybook-addon-themes": "6.1.0",
		"ts-node": "10.9.1",
		"typescript": "4.3.5"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	}
}

